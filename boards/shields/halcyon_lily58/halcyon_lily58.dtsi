#include <dt-bindings/zmk/matrix_transform.h>
#include "halcyon_lily58-layouts.dtsi"
#include "vik_connector.dtsi"

&splitkb_halcyon_lily58 {
    transform = <&default_transform>;
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &splitkb_halcyon_lily58;
    };

    trackpad_listener: trackpad_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
    };

    kscan0: kscan_composite {
        compatible = "zmk,kscan-composite";
        rows = <6>;
        columns = <12>;
        wakeup-source;

        matrix {
            kscan = <&kscan1>;
        };

        direct {
            kscan = <&kscan2>;
            row-offset = <5>;
        };
    };

    kscan2: kscan_direct {
        compatible = "zmk,kscan-gpio-direct";
        wakeup-source;

        input-gpios = <&halcyon_conn 29 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // Dummy pin
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <6>;
        // | SW6  | SW5  | SW4  | SW3  | SW2  | SW1  |                 | SW1  | SW2  | SW3  | SW4  | SW5  | SW6  |
        // | SW12 | SW11 | SW10 | SW9  | SW8  | SW7  |                 | SW7  | SW8  | SW9  | SW10 | SW11 | SW12 |
        // | SW18 | SW17 | SW16 | SW15 | SW14 | SW13 |                 | SW13 | SW14 | SW15 | SW16 | SW17 | SW18 |
        // | SW24 | SW23 | SW22 | SW21 | SW20 | SW19 | SW25 |   | SW25 | SW19 | SW20 | SW21 | SW22 | SW23 | SW24 |
        //                      | SW29 | SW28 | SW27 | SW26 |   | SW26 | SW27 | SW28 | SW29 |
        // | D0   | D1   | D2   | D3   | D4   |                               | D4   | D3   | D2   | D1   | D0   |
        map = <
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                 RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                 RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                 RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
        RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(4,1) RC(4,10) RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
                                RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6) RC(4,7) RC(4,8) RC(4,9)
        RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4)                                 RC(5,10) RC(5,9) RC(5,8) RC(5,7) RC(5,6)
        >;
    };

    left_halcyon_encoder: halcyon_encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&halcyon_conn 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Dummy pin
        b-gpios = <&halcyon_conn 30 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Dummy pin
        steps = <80>;
        status = "disabled";
    };

    right_halcyon_encoder: halcyon_encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&halcyon_conn 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Dummy pin
        b-gpios = <&halcyon_conn 30 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Dummy pin
        steps = <80>;
        status = "disabled";
    };
    
    left_soldered_encoder: soldered_encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&halcyon_conn 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&halcyon_conn 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "disabled";
    };

    right_soldered_encoder: soldered_encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&halcyon_conn 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&halcyon_conn 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_halcyon_encoder &right_halcyon_encoder &left_soldered_encoder &right_soldered_encoder>;
        triggers-per-rotation = <20>;
    };
};
