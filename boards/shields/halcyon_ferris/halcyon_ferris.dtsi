#include <dt-bindings/zmk/matrix_transform.h>
#include "halcyon_ferris-layouts.dtsi"
#include "vik_connector.dtsi"

&splitkb_halcyon_ferris {
    transform = <&default_transform>;
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &splitkb_halcyon_ferris;
    };

    trackpad_listener: trackpad_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
    };

    kscan0: kscan_composite {
        compatible = "zmk,kscan-composite";
        rows = <5>;
        columns = <10>;
        wakeup-source;

        matrix {
            kscan = <&kscan1>;
        };

        direct {
            kscan = <&kscan2>;
            row-offset = <4>;
        };
    };
    
    kscan2: kscan_direct {
        compatible = "zmk,kscan-gpio-direct";
        wakeup-source;

        input-gpios = <&halcyon_conn 29 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // Dummy pin
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <5>;
        map = <
        RC(0,4)  RC(0,3)  RC(0,2)  RC(0,1)  RC(0,0)  RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
        RC(1,4)  RC(1,3)  RC(1,2)  RC(1,1)  RC(1,0)  RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
        RC(2,4)  RC(2,3)  RC(2,2)  RC(2,1)  RC(2,0)  RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
                                   RC(3,1)  RC(3,0)  RC(3,5) RC(3,6)
        RC(4,0)  RC(4,1)  RC(4,2)  RC(4,3)  RC(4,4)  RC(4,9) RC(4,8) RC(4,7) RC(4,6) RC(4,5)
        >;
    };

    left_halcyon_encoder: halcyon_encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&halcyon_conn 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Dummy pin
        b-gpios = <&halcyon_conn 30 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Dummy pin
        steps = <80>;
        status = "disabled";
    };

    right_halcyon_encoder: halcyon_encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&halcyon_conn 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Dummy pin
        b-gpios = <&halcyon_conn 30 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Dummy pin
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_halcyon_encoder &right_halcyon_encoder>;
        triggers-per-rotation = <20>;
    };
};
