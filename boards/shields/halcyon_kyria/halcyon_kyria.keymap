#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/ext_power.h>

#define DEFAULT  0
#define NAV      1
#define SYM      2
#define FUNCTION 3
#define ADJUST   4

/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        qwerty_layer {
            display-name = "Default";
// ---------------------------------------------------------------------------------------------------------------
// |  TAB  |  Q   |  W  |  E  |  R  |   T   |                               |  Y  |  U  |  I  |  O  |  P  | BSPC |
// |LC(ESC)|  A   |  S  |  D  |  F  |   G   |                               |  H  |  J  |  K  |  L  |  ;  |  '   |
// |  SHFT |  Z   |  X  |  C  |  V  |   B   | LBKT | CAPS |   | FUNC | RBKT |  N  |  M  |  ,  |  .  |  /  | SHFT |
//                      | ADJ | GUI |LA(ENT)| SPC  | NAV  |   | SYM  | SPC  | ALT | GUI | APP | 
            bindings = <
&kp TAB       &kp Q &kp W &kp E      &kp R    &kp T                                                     &kp Y    &kp U    &kp I     &kp O   &kp P    &kp BSPC 
&mt LCTRL ESC &kp A &kp S &kp D      &kp F    &kp G                                                     &kp H    &kp J    &kp K     &kp L   &kp SEMI &mt RCTRL SQT 
&kp LSHFT     &kp Z &kp X &kp C      &kp V    &kp B        &kp LBKT  &kp CAPS    &mo FUNCTION &kp RBKT  &kp N    &kp M    &kp COMMA &kp DOT &kp FSLH &kp RSHFT 
                          &mo ADJUST &kp LGUI &mt LALT RET &kp SPACE &mo NAV     &mo SYM      &kp SPACE &kp RALT &kp RGUI &kp K_APP

&kp RGUI &none &none &none &none                                                                                             &none &none &none &none &kp RGUI 
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        // Uncomment one of the following layers, and comment the Qwerty layer, if you want to use Colemak or Dvorak layouts

        // dvorak_layer {
        //     display-name = "Default Layer";
        //     bindings = <
        //     &kp TAB       &kp SQT  &kp COMMA &kp DOT    &kp P    &kp Y                                                  &kp F    &kp G    &kp C &kp R &kp L &kp BSPC 
        //     &mt LCTRL ESC &kp A    &kp O     &kp E      &kp U    &kp I                                                  &kp D    &kp H    &kp T &kp N &kp S &mt RCTRL SQT 
        //     &kp LSHFT     &kp SEMI &kp Q     &kp J      &kp K    &kp X        &kp LBKT  &kp CAPS &mo FUNCTION &kp RBKT  &kp B    &kp M    &kp W &kp V &kp Z &kp RSHFT 
        //                                      &mo ADJUST &kp LGUI &mt LALT RET &kp SPACE &mo NAV  &mo SYM      &kp SPACE &kp RALT &kp RGUI &kp K_APP
        //
        //     &kp RGUI &none &none &none &none                                                                                          &none &none &none &none &kp RGUI 
        //     >;
        //
        //     sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        // };
        // colemak_dh_layer {
        //     display-name = "Default Layer";
        //     bindings = <
        //     &kp TAB       &kp Q &kp W &kp F      &kp P    &kp B                                                  &kp J    &kp L    &kp U     &kp Y   &kp SEMI &kp BSPC 
        //     &mt LCTRL ESC &kp A &kp R &kp S      &kp T    &kp G                                                  &kp M    &kp N    &kp E     &kp I   &kp O    &mt RCTRL SQT 
        //     &kp LSHFT     &kp Z &kp X &kp C      &kp D    &kp V        &kp LBKT  &kp CAPS &mo FUNCTION &kp RBKT  &kp K    &kp H    &kp COMMA &kp DOT &kp FSLH &kp RSHFT 
        //                               &mo ADJUST &kp LGUI &mt LALT RET &kp SPACE &mo NAV  &mo SYM      &kp SPACE &kp RALT &kp RGUI &kp K_APP
        //
        //     &kp RGUI &none &none &none &none                                                                                          &none &none &none &none &kp RGUI 
        //     >;
        //
        //     sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        // };

        navigation_layer {
            display-name = "Navigation";
// ------------------------------------------------------------------------------------------------------------
// |     |     |     |     |     |     |                            | PG_UP | HOME | UP  | END | VOL_UP| DEL  |
// |     |     |     |     |     |     |                            | PG_DN | LEFT | DOWN| RGT | VOL_DN| INS  |
// |     |     |     |     |     |     |     | SLCK |   |     |     | PAUSE | PREV | PLAY| NEXT| MUTE  | PSCRN|
//                   |     |     |     |     |      |   |     |     |       |      |     |
            bindings = <
&trans     &trans   &trans   &trans    &trans    &trans                                  &kp PG_UP   &kp HOME   &kp UP           &kp END    &kp K_VOL_UP   &kp DEL
&trans     &kp LGUI &kp LALT &kp LCTRL &kp LSHFT &trans                                  &kp PG_DN   &kp LEFT   &kp DOWN         &kp RIGHT  &kp K_VOL_DN   &kp INS
&trans     &trans   &trans   &trans    &trans    &trans &trans &kp SLCK    &trans &trans &kp C_PAUSE &kp K_PREV &kp K_PLAY_PAUSE &kp K_NEXT &kp K_MUTE     &kp PSCRN
                             &trans    &trans    &trans &trans &trans      &trans &trans &trans      &trans     &trans

&trans &trans &trans &trans &trans                                                                                             &trans &trans &trans &trans &trans 
            >;
            sensor-bindings = <&inc_dec_kp &trans &trans &inc_dec_kp &trans &trans &inc_dec_kp &trans &trans &inc_dec_kp &trans &trans>;
        };

        symbol_layer {
            display-name = "Symbols";
// -----------------------------------------------------------------------------------------------------
// |  `  |  1  |  2  |  3  |  4  |  5  |                           |  6  |  7  |  8  |  9  |  0  |  =  |
// |  ~  |  !  |  @  |  #  |  $  |  %  |                           |  ^  |  &  |  *  |  (  |  )  |  +  |
// | "|" |  \  |  :  |  ;  |  -  |  [  |  {  |     |   |     |  }  |  ]  |  _  |  ,  |  .  |  /  |  ?  |
//                   |     |     |     |     |     |   |     |     |     |     |     |
            bindings = <
&kp GRAVE &kp N1   &kp N2    &kp N3   &kp N4    &kp N5                                       &kp N6    &kp N7    &kp N8    &kp N9   &kp N0   &kp EQUAL
&kp TILDE &kp EXCL &kp AT    &kp HASH &kp DLLR  &kp PRCNT                                    &kp CARET &kp AMPS  &kp STAR  &kp LPAR &kp RPAR &kp PLUS
&kp PIPE  &kp BSLH &kp COLON &kp SEMI &kp MINUS &kp LBKT  &kp LBRC &trans    &trans &kp RBRC &kp RBKT  &kp UNDER &kp COMMA &kp DOT  &kp FSLH &kp QMARK
                             &trans   &trans    &trans    &trans   &trans    &trans &trans   &trans    &trans    &trans

&trans &trans &trans &trans &trans                                                                               &trans &trans &trans &trans &trans 
            >;
            sensor-bindings = <&inc_dec_kp &trans &trans &inc_dec_kp &trans &trans &inc_dec_kp &trans &trans &inc_dec_kp &trans &trans>;
        };

        function_layer {
            display-name = "Function";
// -----------------------------------------------------------------------------------------------------
// |     | F9  | F10 | F11 | F12 |     |                           |     |     |     |     |     |     |
// |     | F5  | F6  | F7  | F8  |     |                           |     |RSHFT|RCTRL| LALT| RGUI|     |
// |     | F1  | F2  | F3  | F4  |     |     |     |   |     |     |     |     |     |     |     |     |
//                   |     |     |     |     |     |   |     |     |     |     |     |
            bindings = <
&trans &kp F9 &kp F10 &kp F11 &kp F12 &trans                               &trans &trans    &trans    &trans   &trans   &trans
&trans &kp F5 &kp F6  &kp F7  &kp F8  &trans                               &trans &kp RSHFT &kp RCTRL &kp LALT &kp RGUI &trans
&trans &kp F1 &kp F2  &kp F3  &kp F4  &trans &trans &trans   &trans &trans &trans &trans    &trans    &trans   &trans   &trans
                      &trans  &trans  &trans &trans &trans   &trans &trans &trans &trans    &trans

&trans &trans &trans &trans &trans                                                          &trans &trans &trans &trans &trans 
            >;
            sensor-bindings = <&inc_dec_kp &trans &trans &inc_dec_kp &trans &trans &inc_dec_kp &trans &trans &inc_dec_kp &trans &trans>;
        };

        adjust_layer {
            display-name = "Adjust";
// -----------------------------------------------------------------------------------------------------------------------
// | BOOT|STUDIO|BTCLR| BT1 | BT2 | BT3 |                           |       |       |       |       |       |BOOT |
// |     |      |     | BT4 | BT5 |     |                           | RGB_ON|RGB_HUI|RGB_SAI|RGB_BRI|RGB_EFF|     |
// |     |      |     |     |     |     |     |     |   |     |     |RGB_OFF|RGB_HUD|RGB_SAD|RGB_BRD|RGB_EFR|     |
//                    |     |     |     |     |     |   |     |     |       |       |       |
            bindings = <
&bootloader &studio_unlock &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2                               &trans          &trans          &trans          &trans          &trans          &bootloader
&ext_power EP_ON      &ext_power EP_OFF         &trans     &bt BT_SEL 3 &bt BT_SEL 4 &trans                                     &rgb_ug RGB_ON  &rgb_ug RGB_SAI &rgb_ug RGB_HUI &rgb_ug RGB_BRI &rgb_ug RGB_EFF &trans
&trans    &trans         &trans     &trans       &trans       &trans       &trans &trans   &trans &trans &rgb_ug RGB_OFF &rgb_ug RGB_SAD &rgb_ug RGB_HUD &rgb_ug RGB_BRD &rgb_ug RGB_EFR &trans
                                      &trans       &trans       &trans       &trans &trans   &trans &trans &trans          &trans          &trans

&trans &trans &trans &trans &trans                                                                                                                             &trans &trans &trans &trans &trans 
            >;
            sensor-bindings = <&inc_dec_kp &trans &trans &inc_dec_kp &trans &trans &inc_dec_kp &trans &trans &inc_dec_kp &trans &trans>;
        };
    };
};
